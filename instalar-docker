#!/bin/bash

set -e

echo "Atualizando pacotes do sistema..."
sudo apt update
sudo apt upgrade -y

echo "Instalando dependências necessárias..."
sudo apt install -y ca-certificates curl gnupg lsb-release

echo "Adicionando chave GPG oficial do Docker..."
sudo mkdir -p /etc/apt/keyrings
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /etc/apt/keyrings/docker.gpg

echo "Adicionando repositório Docker ao APT..."
echo \
  "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu \
  $(lsb_release -cs) stable" | sudo tee /etc/apt/sources.list.d/docker.list > /dev/null

echo "Atualizando índice do apt..."
sudo apt update

echo "Instalando Docker Engine e componentes..."
sudo apt install -y docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin

echo "Verificando instalação do Docker..."
sudo docker run --rm hello-world

echo "Instalando Docker Compose (binário) para suporte ao comando 'docker-compose'..."
sudo curl -L "https://github.com/docker/compose/releases/latest/download/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose
sudo chmod +x /usr/local/bin/docker-compose

echo "Verificando versão do Docker Compose..."
docker-compose --version

echo "Adicionando seu usuário ao grupo docker para usar sem sudo (requer logout/login)..."
sudo usermod -aG docker "$USER"

echo -e "\nInstalação concluída! Faça logout e login novamente para usar docker sem sudo."
